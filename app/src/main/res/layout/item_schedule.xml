<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/schedule_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp">

    <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

        <RadioButton
                android:id="@+id/radioButtonMonday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:layout_marginStart="20dp" />

        <RadioButton
                android:id="@+id/radioButtonTuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:layout_marginStart="20dp" />

        <RadioButton
                android:id="@+id/radioButtonWednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:layout_marginStart="20dp" />

        <RadioButton
                android:id="@+id/radioButtonThursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:layout_marginStart="20dp" />

        <RadioButton
                android:id="@+id/radioButtonFriday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:layout_marginStart="20dp" />
    </RadioGroup>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Start time: "
                android:textSize="30sp"
                android:textColor="#647292"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                    android:id="@+id/auto_complete_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hour"
                    android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp">

        <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="End time: "
                android:textSize="30sp"
                android:textColor="#647292"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                    android:id="@+id/auto_complete_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hour"
                    android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_of_poll"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <EditText
                    android:id="@+id/max_no_of_students"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:hint="Enter the maximum number of student for this hour"
                    android:gravity="center" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>