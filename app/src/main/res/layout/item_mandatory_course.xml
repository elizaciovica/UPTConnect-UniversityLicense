<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        card_view:cardCornerRadius="5dp"
        android:backgroundTint="@color/course">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

        <ImageView
                android:id="@+id/course_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/sigma"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/mandatory_course_name"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/mandatory_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#647292"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="80dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/course_image"
                app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>