<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/name_request_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this poll?"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/delete_btn"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textColor="#570924"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_btn"
            style="?attr/borderlessButtonStyle"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:backgroundTint="#FF5A5A"
            android:text="Delete"
            android:textColor="#570924"
            android:textFontWeight="300"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name_request_course"
            app:layout_constraintRight_toLeftOf="@id/cancel_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            style="?attr/borderlessButtonStyle"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/grey"
            android:text="CANCEL"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name_request_course"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/delete_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
