<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeActivity"
        android:background="#B8DCE4">

    <ImageView
            android:id="@+id/profile_image"
            android:layout_width="95dp"
            android:layout_height="91dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraint_id"
            android:background="@drawable/default_profile_picture"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintVertical_bias="0.506"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    <TextView
            android:id="@+id/username_id"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@+id/constraint_id"
            android:text="Student Name"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.454" />

    <ImageButton
            android:id="@+id/lines_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/username_id"
            app:layout_constraintBottom_toTopOf="@+id/constraint_id"
            android:background="@drawable/toolbar"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintVertical_bias="0.16" />

    <GridLayout
            android:id="@+id/constraint_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rowCount="3"
            android:columnCount="2"
            android:background="@drawable/rounded_corners">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/news_card"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:layout_width="172dp"
                android:layout_height="242dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="194dp"
                        app:srcCompat="@drawable/news"
                        android:scaleType="centerCrop"
                        android:contentDescription="This is a description" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="News"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="50dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/groups_card"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:layout_width="172dp"
                android:layout_height="242dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="194dp"
                        app:srcCompat="@drawable/groups"
                        android:scaleType="centerCrop"
                        android:contentDescription="This is a description" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groups"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="40dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/calendar_card"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:layout_width="172dp"
                android:layout_height="242dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    app:srcCompat="@drawable/calendar"
                    android:scaleType="centerCrop"
                    android:contentDescription="This is a description" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="28dp" />

        </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/notes_card"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:layout_width="172dp"
                android:layout_height="242dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="194dp"
                        app:srcCompat="@drawable/notes2"
                        android:scaleType="centerCrop"
                        android:contentDescription="This is a description" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="48dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/locations_card"
                style="?attr/materialCardViewElevatedStyle"
                android:clickable="true"
                android:layout_width="172dp"
                android:layout_height="242dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="194dp"
                        app:srcCompat="@drawable/maps"
                        android:scaleType="centerCrop"
                        android:contentDescription="This is a description" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locations"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>