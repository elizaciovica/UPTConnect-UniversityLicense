<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners">

    <TextView
            android:id="@+id/name_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/details_btn"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/details_btn"
            style="?attr/borderlessButtonStyle"
            android:layout_width="147dp"
            android:layout_height="68dp"
            android:backgroundTint="@color/mine8"
            android:text="More Details"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@+id/name_marker"
            app:layout_constraintRight_toLeftOf="@id/cancel_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            style="?attr/borderlessButtonStyle"
            android:layout_width="147dp"
            android:layout_height="68dp"
            android:backgroundTint="@color/grey"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textFontWeight="300"
            android:textSize="16dp"
            android:textStyle="italic"
            app:cornerRadius="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name_marker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/details_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
